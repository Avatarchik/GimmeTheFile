<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FormatCardStyle" parent="Theme.AppCompat.Light">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="CollapsingExpandedTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="OpenPlayerDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">80%</item>
        <item name="windowFixedWidthMinor">80%</item>
        <item name="windowFixedHeightMajor">75%</item>
        <item name="windowFixedHeightMinor">15%</item>
    </style>

    <style name="FormatItemKeys" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="FormatItemValues" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

</resources>
